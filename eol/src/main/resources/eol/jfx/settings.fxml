<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eol.jfx.viewcontrollers.SettingsController" spacing="20" alignment="CENTER" styleClass="vbox" stylesheets="@css/menu.css">
    <Label text="Settings" styleClass="title-label"/>
    <Label text="Select Difficulty:"/>
    <ComboBox fx:id="difficultyComboBox" styleClass="menu-combobox"/>
    <Button text="Save" styleClass="menu-button" onAction="#handleSave"/>
    <Button text="Back" styleClass="menu-button" onAction="#handleBack"/>
</VBox>